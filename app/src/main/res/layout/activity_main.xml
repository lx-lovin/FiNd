<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#dff9fb"
        android:id="@+id/relativeLayout"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/imageView"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0" tools:ignore="NotSibling"
                android:layout_alignParentTop="true"/>

        <!--  <TextView android:layout_width="300dp"
              android:text="Mouse"
              android:textSize="40dp"
              android:textColor="@android:color/black"
              android:padding="10dp"
              android:layout_height="wrap_content" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/result2"
              app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="28dp" android:layout_marginEnd="8dp"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
              android:id="@+id/result1"/> -->
        <TextView android:layout_width="match_parent"
                  android:layout_marginRight="100dp"
                  android:layout_marginLeft="100dp"
                  android:layout_below="@id/imageView"
                  android:padding="10dp"
                  android:textColor="@android:color/black"
                  android:id="@+id/label"
                  android:gravity="center"
                  android:textSize="20dp"
                  android:layout_height="wrap_content"/>

        <ImageView android:layout_width="40dp"
                   android:layout_centerVertical="true"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="10dp"
                   android:id="@+id/wiki"
                   android:layout_below="@id/label"
                   android:layout_height="40dp"/>

        <Button android:layout_width="200dp"
                android:layout_below="@id/wiki"
                android:id="@+id/tryAgain"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:textColor="@android:color/white"
                android:text="Didn't Find ! what you expect Try again"
                android:background="#0652DD"
                android:layout_height="wrap_content"/>



</RelativeLayout>